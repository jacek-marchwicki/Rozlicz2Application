<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="com.rozlicz2.application.client.resources.ApplicationResources" field="res"></ui:with>
	<ui:with type="com.rozlicz2.application.client.resources.ApplicationConstants" field="i18n"></ui:with>

	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.label {
			display: inline-block;
		}
		.removeImage {
			display: inline-block;
			vertical-align: middle;
			cursor: pointer;
			cursor: hand;
		}
		.htmlPanel {
			border: 1px solid #E4E4E4;
			border-radius: 4px;
			display: inline-block;
			padding: 0px 10px;
			margin: 2px 2px;
			background: #F0F0F0;
			background: -o-linear-gradient(top,#F0F0F0,#E4E4E4);
			background: -moz-linear-gradient(top,#F0F0F0,#E4E4E4);
			background: -webkit-gradient(linear,left top,left bottom,from(#F0F0F0),to(#E4E4E4));
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.htmlPanel}">
		<g:Label styleName="{style.label}" ui:field="userLabel"></g:Label>
		<g:Image ui:field="removeImage" styleName="{style.removeImage}" altText="{i18n.removeUser}" resource="{res.removeUser}"></g:Image>
		<div class="{res.css.clearClass}"></div>
	</g:HTMLPanel>
</ui:UiBinder> 