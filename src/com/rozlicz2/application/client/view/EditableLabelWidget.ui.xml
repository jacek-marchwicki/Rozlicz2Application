<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.label {
			font-weight: bold;
			font-size: 1.5em;
			float: left;
		}
		.labelContainer{
			min-height: 2em;
		}
		.edit {
			font-size: 0.8em;
			margin-left: 6px;
			float: left;
			
		}
		.saveButton {
			color: white;
			background: green;	
			font-weight: bold;
			border: 0px;
			float: left;
		}
		.cancelButton {
			color: white;
			background: red;	
			border: 0px;
			float: left;		
		}
		
		.errorLabel {
			clear: both;
			font-size: 0.8em;
			-moz-transition-property: opacity;
  			-moz-transition-duration: 3s, 5s;
		}
		
		.textBox {
			float: left;
			font-size: 1em;
			width: 40%;
		}
		
	</ui:style>
	<g:HTMLPanel styleName="{style.labelContainer}">
		<g:Label ui:field="textLabel" styleName="{style.label}"></g:Label>
		<g:Anchor ui:field="editAnchor" styleName="{style.edit}" text="[edit]"></g:Anchor>
		<g:TextBox ui:field="textBox" styleName="{style.textBox}"></g:TextBox>
		<g:Button ui:field="saveButton" text="Save" styleName="{style.saveButton}"></g:Button>
		<g:Button ui:field="cancelButton" text="Cancel" styleName="{style.cancelButton}"></g:Button>
		<g:Label ui:field="errorLabel" styleName="{style.errorLabel}"></g:Label>
		<div style="clear: both"></div>
	</g:HTMLPanel>
</ui:UiBinder> 