<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.label {
			font-weight: bold;
			font-size: 1.5em;
			float: left;
		}
		.labelContainer{
			min-height: 2em;
		}
		.edit {
			font-size: 0.8em;
			margin-left: 6px;
			float: left;
			
		}
		.saveButton {
			color: #ffffff;
			background: #019138;	
			font-weight: bold;
			border: 1px solid #E4E4E4;
			float: left;
			padding: 1px 10px 1px 10px;
			margin-left: 15px;
			border-radius: 4px;
			-webkit-transition: background 0.3s ease-in-out;	
		}
		.saveButton[disabled] {
			background: #E4E4E4;
		}
		.cancelButton {
			color: #ffffff;
			background: #D73828;	
			border: 1px solid #E4E4E4;
			float: left;
			padding: 1px 10px 1px 10px;
			margin-left: 0px;
			border-radius: 4px;
		}
		
		.errorLabel {
			clear: both;
			font-size: 0.8em;
			-webkit-transition-property: opacity;
  			-webkit-transition-duration: 0.5s, 1s;
  			min-height: 0.8em;
  			color: #D73828;
		}
		
		.textBox {
			float: left;
			font-size: 1em;
			width: 40%;
			border: 1px solid #E4E4E4;
			border-radius: 4px;
			-webkit-transition: color, background 0.3s ease-in-out;
		}
		
		.captionLabel {
			clear: both;
			font-family: Gill Sans, Verdana;
			font-size: 0.9em;
			line-height: 1em;
			letter-spacing: 0.2em;
			margin-left: 10px;
		}
		
	</ui:style>
	<g:HTMLPanel ui:field="labelContainer" styleName="{style.labelContainer}">
		<g:Label ui:field="textLabel" styleName="{style.label}"></g:Label>
		<g:Anchor ui:field="editAnchor" styleName="{style.edit}" text="[edit]"></g:Anchor>
		<g:TextBox ui:field="textBox" styleName="{style.textBox}"></g:TextBox>
		<g:Button ui:field="saveButton" text="Save" styleName="{style.saveButton}"></g:Button>
		<g:Button ui:field="cancelButton" text="Cancel" styleName="{style.cancelButton}"></g:Button>
		<g:Label visible="false" ui:field="captionLabel" styleName="{style.captionLabel}"></g:Label>
		<g:Label ui:field="errorLabel" styleName="{style.errorLabel}"></g:Label>
		<div style="clear: both"></div>
	</g:HTMLPanel>
</ui:UiBinder> 